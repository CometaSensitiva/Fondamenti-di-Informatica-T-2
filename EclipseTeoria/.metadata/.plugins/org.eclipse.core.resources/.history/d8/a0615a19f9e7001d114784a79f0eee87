package esempio2;

/**
 * The AnimaleAcquatico class represents an aquatic animal and extends the Animale class.
 * It provides methods for getting information about the animal, such as its name, sound,
 * movement, and habitat.
 */
public abstract class AnimaleAcquatico extends Animale {

  /**
   * Constructs an AnimaleAcquatico object with the specified name.
   * @param s The name of the animal as a String.
   */
  protected AnimaleAcquatico(String s) {
    super(s);
  }

  /**
   * Gets the habitat of the animal, which is in the water.
   * @return A String representing the habitat of the animal.
   */
  @Override
  public String vive() {
    return "nell'acqua";
  }

  /**
   * Gets the name of the animal as an aquatic animal.
   * @return A String representing the name of the animal as an aquatic animal.
   */
  @Override
  public String nome() {
    return "un animale acquatico";
  }

}

