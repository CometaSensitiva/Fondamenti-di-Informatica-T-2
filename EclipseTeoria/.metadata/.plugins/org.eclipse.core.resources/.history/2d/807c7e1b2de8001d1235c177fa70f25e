
public class Frazione {
	private int num, den;
	
	//Costruttori
	//Principale che gestisce anche i valori negativi al denominatore per la formattazione
	public Frazione(int num, int den) {
		if (den < 0) {
	        this.num = -num;
	        this.den = -den;
	    } else {
	        this.num = num;
	        this.den = den;
	    }
	}

	public Frazione(int num) {this(num, 1);}
	
	public Frazione() {this(1,1);}
	
	//Metodi
	public int getNum() {return this.num;}
	
	public int getDen() {return this.den;}
	
	public Frazione minTerm() {
		int mcd=mcd(this.getNum(),this.getDen());
		int num=this.getNum()/mcd; 
		int den=this.getDen()/mcd;
		return new Frazione(num, den);
	}
	public boolean equals(Frazione that) { 
		return (this.getNum()*that.getDen())==(that.getNum()*this.getDen());
		//Nota che sto rispettando l'incapsulamento sia per this sia per that
	}
	
	private int mcd(int a, int b) {
		if(b==0) {
			return a;
		}
		else return (mcd(b, a%b));
	}
}
