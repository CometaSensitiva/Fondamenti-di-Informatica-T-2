
public class Contatore3 {
	private int stato;
	//Costruttore ausiliario senza argomenti setta stato=0
	public Contatore3() {stato = 0;}
	//Costruttore primario con un argomento setta stato=v
	public Contatore3(int v) {stato=v;}
	
	//I metodi rimangono invariati
	
	public void reset() {stato=0;}
	public void inc() {stato++;}
	public int getValue() {return stato;}
}
