package esempio9;

import java.util.Comparator;
import java.text.Normalizer;

/**
 * 
 * A Comparator that compares Person objects based on their last names in
 * alphabetical order.
 */
public class PersonaCognomeCognomeAlphabeticalComparator implements Comparator<Persona> {

	/**
	 * 
	 * Compares two Persona objects based on their last names.
	 * 
	 * @param p1 the first Persona object to compare
	 * 
	 * @param p2 the second Persona object to compare
	 * 
	 * @return a negative integer, zero, or a positive integer as the first argument
	 *         is less than, equal to, or greater than the second
	 */
	@Override
	public int compare(Persona p1, Persona p2) {
// Normalize the last names to account for differences in diacritical marks and case sensitivity
		String s1 = Normalizer.normalize(p1.cognome().toLowerCase(), Normalizer.Form.NFD);
		String s2 = Normalizer.normalize(p2.cognome().toLowerCase(), Normalizer.Form.NFD);

// Compare the normalized last names
		return s1.compareTo(s2);
	}

}
