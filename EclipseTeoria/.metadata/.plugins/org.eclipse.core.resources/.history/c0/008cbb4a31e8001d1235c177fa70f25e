package esempio1;

import java.text.NumberFormat;
import java.util.Locale;

public class FormattazioneDiNumeri {
	public static void main(String[] args) {
		double x = 43.12345678;
		double y = 0.7;
		double z = 13456.78;

	
		NumberFormat formattatoreNumerico1 = NumberFormat.getNumberInstance();


		formattatoreNumerico1.setMaximumFractionDigits(2);
		System.out.println("Default locale");
		System.out.println(formattatoreNumerico1.format(x));
		System.out.println(formattatoreNumerico1.format(y));
		System.out.println(formattatoreNumerico1.format(z));
		System.out.println();

		// Creo un formattatore numerico in base allo standard del Canada
		NumberFormat formattatoreNumerico2 = NumberFormat.getNumberInstance(Locale.CANADA);

		// Setto le cifre decimali massime a 2
		formattatoreNumerico2.setMaximumFractionDigits(2);
		System.out.println("Canada locale");
		System.out.println(formattatoreNumerico2.format(x));
		System.out.println(formattatoreNumerico2.format(y));
		System.out.println(formattatoreNumerico2.format(z));
		System.out.println();
		// Creo un formattatore numerico in base allo standard del Canada francese
		NumberFormat formattatoreNumerico3 = NumberFormat.getNumberInstance(Locale.CANADA_FRENCH);

		// Setto le cifre decimali massime a 2
		formattatoreNumerico3.setMaximumFractionDigits(2);
		System.out.println("Canada Francese locale");
		System.out.println(formattatoreNumerico3.format(x));
		System.out.println(formattatoreNumerico3.format(y));
		System.out.println(formattatoreNumerico3.format(z));
		System.out.println();

	}
}
