package esempio8;

import java.util.Arrays;

import esempio7.Counter;

public class Main8 {
	public static void main(String[] args) {
		Counter[] myCounterArray = { new Counter(110), new Counter(100), new Counter(30), new Counter(50) };
		for (Counter c : myCounterArray)
			System.out.println(c);
		
		System.out.println("Array ordinato in senso crescente");
		Arrays.sort(myCounterArray);
		for (Counter c : myCounterArray)
			System.out.println(c);
		
		System.out.println("Array ordinato in senso decrescente");
		Arrays.sort(myCounterArray,0, myCounterArray.length, new CounterDescendingComparator());
		for (Counter c : myCounterArray)
			System.out.println(c);
		
		System.out.println("Array ordinato in modulo 24");
		Arrays.sort(myCounterArray, new CounterModule24Comparator());
		for (Counter c : myCounterArray)
			System.out.println(c);
	}
}
