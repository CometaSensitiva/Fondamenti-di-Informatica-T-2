package esempio3;

/**
 * An interface for rectangular triangles that extends the Triangle interface.
 * Provides methods to get the lengths of the two catetes and the hypotenuse of
 * the triangle.
 * 
 * @author michelemazzaa
 */
public interface RightTriangle extends Triangle {

	public static RightTriangle of(double catete1, double catete2) {
		return new ImplRightTriangle(catete1, catete2);
	}

	/**
	 * Returns the length of the minor catete of the rectangular triangle.
	 * 
	 * @return the length of the minor catete of the rectangular triangle.
	 */
	public double getCateteMinor();

	/**
	 * Returns the length of the greater catete of the rectangular triangle.
	 * 
	 * @return the length of the greater catet of the rectangular triangle.
	 */
	public double getCateteGreater();

	/**
	 * Returns the length of the hypotenuse of the rectangular triangle.
	 * 
	 * @return the length of the hypotenuse of the rectangular triangle.
	 */
	public double getHypotenuse();
}
