package esempio3;

import java.util.Arrays;

public class ImplQuadrilateral implements Quadrilateral, Shape {
	public double a, b, c, d;
	public double angleDAB, angleABC, angleBCD, angleCDA;

	public ImplQuadrilateral(double a, double b, double c, double d, double angleDAB, double angleABC, double angleBCD, double angleCDA) throws IllegalArgumentException  {
		
		if()
		
