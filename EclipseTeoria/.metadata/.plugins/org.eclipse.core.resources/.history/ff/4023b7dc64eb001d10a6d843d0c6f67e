package esempio7;

import java.util.Arrays;

/**
 * 
 * Main class that contains the main method for testing the Counter class and
 * its methods.
 */
public class Main7 {

	/**
	 * 
	 * Main method for testing the Counter class and its methods.
	 * 
	 * It creates two counters with the same initial value, and compares them using
	 * the compareTo method,
	 * 
	 * then it checks if they are equal using the equals method.
	 * 
	 * It also increments the first counter and compares them again.
	 * 
	 * Finally, it creates an array of counters, prints them, sorts them using the
	 * compareTo method,
	 * 
	 * and then prints them again to check if they are sorted correctly.
	 */
	public static void main(String[] args) {
		Counter c1 = new Counter(10);
		Counter c2 = new Counter(10);

		System.out.println("c1 vs c2 : " + c1.compareTo(c2));

		System.out.println("c1 == c2 : " + c1.equals(c2));

		c1.inc();
		System.out.println("c1 vs c2 : " + c1.compareTo(c2));

		System.out.println("c2 vs c1 : " + c2.compareTo(c1));

		System.out.println("c1 == c2 : " + c1.equals(c2));

		Counter[] myCounterArray = { new Counter(110), new Counter(100), new Counter(30), new Counter(50) };
		for (Counter c : myCounterArray)
			System.out.println(c);
		Arrays.sort(myCounterArray);
		for (Counter c : myCounterArray)
			System.out.println(c);
	}
}