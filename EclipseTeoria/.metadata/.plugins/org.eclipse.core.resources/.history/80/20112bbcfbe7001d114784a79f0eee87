package esempio2;

public class Main2 {

	public static void main(String[] args) {
		// create some animal objects
		AnimaleTerrestre elefante = new Elefante("Dumbo");
		AnimaleAcquatico squalo = new Squalo("Bruce");
		PesceDiMare pesce = new Tonno("Nemo");

		// print information about the animals
		elefante.mostra(); // output: Dumbo, un elefante, fa trump trump, si muove camminando e vive sulla
							// terra ferma
		squalo.mostra(); // output: Bruce, uno squalo, fa splash splash, si muove nuotando e vive
							// nell'acqua
		pesce.mostra(); // output: Nemo, un pesce di mare, fa blub blub, si muove nuotando e vive in
						// mare
	}

}
