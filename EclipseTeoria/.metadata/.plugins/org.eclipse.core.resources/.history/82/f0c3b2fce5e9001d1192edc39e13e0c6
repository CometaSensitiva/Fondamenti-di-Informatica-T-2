	public boolean isValidQuadrilateral(double a, double b, double c, double d, double angleDAB, double angleABC, double angleBCD, double angleCDA) {
		double[] sides = {a,b,c,d};
		double[] angles= {angleDAB,angleABC,angleBCD,angleCDA};
		Arrays.sort(sides);
		for(int i=0;i< sides.length;i++) {
			if(sides[i]<0)
				return false;
		}
		return sides[0]>sides[1]+sides[2]+sides[3]&&
		sides[1]>sides[0]+sides[2]+sides[3]&&
		sides[2]>sides[0]+sides[1]+sides[2]&&
		sides[3]>sides[1]+sides[2]+sides[3];
		
	}

