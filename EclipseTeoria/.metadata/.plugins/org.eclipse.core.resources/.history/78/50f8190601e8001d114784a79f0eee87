package esempio3;

/**
 * A class representing an isosceles triangle shape.
 * This class extends the 'Triangolo' class and overrides the 'nome' method to return the name of the isosceles triangle shape.
 */
public class TriangoloIsoscele extends Triangolo {

    /**
     * Constructor for the TriangoloIsoscele class.
     *
     * @param lato1 The length of the first side of the triangle.
     * @param lato2 The length of the second side of the triangle.
     * @param lato3 The length of the third side of the triangle.
     * @throws IllegalArgumentException If the given side lengths cannot form an isosceles triangle.
     */
    public TriangoloIsoscele(double lato1, double lato2, double lato3) throws IllegalArgumentException {
        if ((lato1 == lato2 || lato1 == lato3 || lato2 == lato3) && (lato1 < lato2 + lato3 && lato2 < lato1 + lato3 && lato3 < lato1 + lato2)) {
            super(lato1, lato2, lato3);
        } else {
            throw new IllegalArgumentException("Cannot construct an isosceles triangle with the specified side lengths.");
        }
    }

    /**
     * Returns the name of the isosceles triangle shape.
     *
     * @return The name of the isosceles triangle shape.
     */
    @Override
    public String nome() {
        return "Triangolo isoscele";
    }

}
